<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.youthhub.signUpPage.FragmentCreateAccount3">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/work_status_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:backgroundTint="@color/light_dark"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/work_exp_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:backgroundTint="@color/light_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/work_status_spinner"
            app:layout_constraintLeft_toLeftOf="@+id/work_status_spinner"
            app:layout_constraintRight_toRightOf="@+id/work_status_spinner" />

        <com.libizo.CustomEditText
            android:id="@+id/hours_work"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="Hours available to work per week - eg:20"
            android:textColorHint="@color/grey"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:inputType="number"
            android:theme="@style/EditText_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/work_exp_spinner"
            app:layout_constraintLeft_toLeftOf="@+id/work_status_spinner"
            app:layout_constraintRight_toRightOf="@+id/work_status_spinner" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/region_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:backgroundTint="@color/light_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hours_work"
            app:layout_constraintLeft_toLeftOf="@+id/work_status_spinner"
            app:layout_constraintRight_toRightOf="@+id/work_status_spinner" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/district_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:backgroundTint="@color/light_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/region_spinner"
            app:layout_constraintLeft_toLeftOf="@+id/work_status_spinner"
            app:layout_constraintRight_toRightOf="@+id/work_status_spinner"
            app:layout_constraintHorizontal_bias="0.0"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/destination_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:backgroundTint="@color/light_dark"
            app:layout_constraintRight_toRightOf="@+id/work_status_spinner"
            app:layout_constraintLeft_toLeftOf="@+id/work_status_spinner"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/district_spinner" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/license_type_spinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="12sp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:backgroundTint="@color/light_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/destination_spinner"
            app:layout_constraintLeft_toLeftOf="@+id/work_status_spinner"
            app:layout_constraintRight_toRightOf="@+id/work_status_spinner"
            />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/open_screen_btn_shape2"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/work_status_spinner"
            app:layout_constraintRight_toRightOf="@+id/work_status_spinner"
            app:layout_constraintTop_toBottomOf="@+id/license_type_spinner"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>