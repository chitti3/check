<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/jobs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/suggest_jobs_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Suggested Jobs"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/suggest_jobs_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/suggest_jobs_txt"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp">

        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/light_dark1"
            android:layout_below="@+id/suggest_jobs_recycler" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>