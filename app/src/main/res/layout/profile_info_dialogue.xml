            android:id="@+id/behance_link_edittext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:theme="@style/EditText_color"
            android:hint="http://www.behance.com/xxxxx"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/additional_info_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Additional Info"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yes_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="start"
            android:text="About Me - Displayed over your Cover photo at the top of your profile" />

        <EditText
            android:id="@+id/about_me_textview"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:gravity="start"
            android:textColor="@color/text_color"
            android:layout_marginRight="8dp"
            android:theme="@style/EditText_color"
            android:text="im youth Yes" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/apply_button"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg2"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Apply"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg3"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
