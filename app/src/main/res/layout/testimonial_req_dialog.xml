<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/testimonial_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Request Testimonial"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/provider_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Providers Title"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/testimonial_txt" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/provider_spinner"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg6"
        app:layout_constraintEnd_toEndOf="@+id/testimonial_txt"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/provider_title_txt" />

    <TextView
        android:id="@+id/testimonial_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="Name of Testimonial Provider"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/provider_spinner" />

    <EditText
        android:id="@+id/testimonial_name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:hint="Name"
        android:textColorHint="@color/text_color"
        android:background="@drawable/bg6"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/testimonial_txt"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/testimonial_name_txt" />

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/testimonial_name" />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:hint="Email"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:background="@drawable/bg6"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/testimonial_txt"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/email_txt" />

    <TextView
        android:id="@+id/organisation_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="Organisation Name"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/organisation"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:hint="Organisation"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:background="@drawable/bg6"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/testimonial_txt"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/organisation_txt" />

    <TextView
        android:id="@+id/cmt_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Comments"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/testimonial_txt"
        app:layout_constraintRight_toRightOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/organisation"/>

    <EditText
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:background="@drawable/bg6"
        android:textSize="12sp"
        android:gravity="start"
        android:lines="4"
        android:scrollbars="vertical"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/testimonial_txt"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/cmt_txt" />

    <Button
        android:id="@+id/apply_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg2"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/testimonial_txt"
        app:layout_constraintTop_toBottomOf="@+id/comment"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Cancel"
        android:textSize="10sp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/bg3"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/apply_btn"
        app:layout_constraintStart_toEndOf="@+id/apply_btn"
        app:layout_constraintTop_toTopOf="@+id/apply_btn" />

</android.support.constraint.ConstraintLayout>