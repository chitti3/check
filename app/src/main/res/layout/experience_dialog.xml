<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/experience_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:gravity="start"
        android:text="Experience"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/job_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Job Title"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="start"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/job_type_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/experience_txt" />

    <TextView
        android:id="@+id/job_type_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Job Type"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="end"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/job_title_txt"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/job_title_txt"
        app:layout_constraintTop_toTopOf="@+id/job_title_txt" />

    <EditText
        android:id="@+id/job_title"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:background="@drawable/bg1"
        android:layout_marginTop="0dp"
        android:singleLine="true"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/job_type_spinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/job_title_txt" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/job_type_spinner"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:background="@drawable/spinner_drop_down"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/job_title"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/job_title"
        app:layout_constraintTop_toTopOf="@+id/job_title" />

    <TextView
        android:id="@+id/job_designation_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Job Designation"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/job_title" />

    <EditText
        android:id="@+id/job_designation"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg1"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/job_designation_txt" />

    <TextView
        android:id="@+id/job_description_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Job Description"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/job_designation" />

    <EditText
        android:id="@+id/job_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:lines="3"
        android:gravity="start"
        android:textSize="12sp"
        android:scrollbars="vertical"
        android:background="@drawable/bg6"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/job_description_txt" />
    <TextView
        android:id="@+id/is_progress_txt"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="Is Inprocess"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"

        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/start_date_txt"
        app:layout_constraintEnd_toStartOf="@+id/is_process_checkbox"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/job_description" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/is_process_checkbox"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_alignParentEnd="true"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/end_date_txt"
        app:layout_constraintTop_toBottomOf="@+id/is_progress_txt"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/is_progress_txt"
        app:layout_constraintTop_toTopOf="@+id/is_progress_txt" />
    <TextView
        android:id="@+id/start_date_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/end_date_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/is_progress_txt" />

    <TextView
        android:id="@+id/end_date_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="end"
        android:visibility="visible"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/start_date_txt"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/start_date_txt"
        app:layout_constraintTop_toTopOf="@+id/start_date_txt" />

    <EditText
        android:id="@+id/start_date"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:background="@drawable/bg1"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawablePadding="4dp"
        android:paddingEnd="4dp"
        android:focusable="false"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/end_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/start_date_txt" />

    <EditText
        android:id="@+id/end_date"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:focusable="false"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:background="@drawable/bg1"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawablePadding="4dp"
        android:paddingEnd="4dp"
        android:layout_marginStart="4dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/start_date"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/start_date"
        app:layout_constraintTop_toTopOf="@+id/start_date" />

    <TextView
        android:id="@+id/work_ind_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Work Industry"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="start"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/sub_work_ind_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/start_date" />


    <TextView
        android:id="@+id/sub_work_ind_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sub Work Industry"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"
        android:gravity="end"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/work_ind_txt"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/work_ind_txt"
        app:layout_constraintTop_toTopOf="@+id/work_ind_txt" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/work_ind"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:background="@drawable/spinner_drop_down"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/sub_work_ind"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/work_ind_txt" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sub_work_ind"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:background="@drawable/spinner_drop_down"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/work_ind"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/work_ind"
        app:layout_constraintTop_toTopOf="@+id/work_ind" />
    <TextView
        android:id="@+id/exprecycle_responability_txt"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="Responability"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_responaility_add"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/experience_txt"
        app:layout_constraintTop_toBottomOf="@+id/start_date"
        />
    <ImageView
        android:id="@+id/btn_responaility_add"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:visibility="visible"
        android:src="@drawable/ic_add"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/exprecycle_responability_txt"
        app:layout_constraintEnd_toEndOf="@+id/experience_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exprecycle_responability_txt"
        app:layout_constraintTop_toTopOf="@+id/exprecycle_responability_txt"/>

        <android.support.v7.widget.RecyclerView
               android:id="@+id/recycle_responability"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:textColor="@color/text_color"
               android:gravity="center_vertical"
               app:layout_constraintEnd_toEndOf="@+id/experience_txt"
               app:layout_constraintStart_toStartOf="@+id/experience_txt"
               app:layout_constraintTop_toBottomOf="@+id/exprecycle_responability_txt" />
    <Button
        android:id="@+id/apply_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg2"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/recycle_responability"
        app:layout_constraintTop_toBottomOf="@+id/recycle_responability"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Cancel"
        android:textSize="10sp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/bg3"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/apply_btn"
        app:layout_constraintStart_toEndOf="@+id/apply_btn"
        app:layout_constraintTop_toTopOf="@+id/apply_btn" />-->
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>