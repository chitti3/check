<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftchatimage"
                app:layout_constraintBottom_toBottomOf="@+id/textViewleft"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewleft">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageViewleft"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/profile_img2"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/leftchatimage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/leftchatimage"
                    />
                <TextView
                    android:id="@+id/receive_msg_name_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/textview_circle2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/leftchatimage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/leftchatimage"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/chat_timeleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingTop="4dp"
                android:paddingEnd="24dp"
                android:paddingBottom="4dp"
                android:text="07-07-2019"

                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/leftchatimage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/discussion_msg_left"
                android:gravity="left"
                android:paddingStart="24dp"
                android:paddingTop="4dp"
                android:paddingEnd="24dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="4dp"
                android:text="Hey When are you going?fefwqfwfwffwwfwfwdwddwd"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toEndOf="@+id/leftchatimage"
                app:layout_constraintTop_toBottomOf="@+id/chat_timeleft" />

            <ImageView
                android:id="@+id/projects_image_left"
                android:layout_width="210dp"
                android:layout_height="270dp"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/dashboard_img"
                app:layout_constraintStart_toEndOf="@+id/leftchatimage"
                app:layout_constraintTop_toBottomOf="@+id/textViewleft"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="wrap"
                android:id="@+id/rightchatimage"
                app:layout_constraintBottom_toBottomOf="@+id/textViewright"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewright" >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageViewright"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/profile_img2"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/rightchatimage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rightchatimage" />
                <TextView
                    android:id="@+id/receive_msg_name_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/textview_circle2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rightchatimage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rightchatimage" />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/chat_timeright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingEnd="24dp"
                android:text="01-07-19"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/rightchatimage"
                app:layout_constraintTop_toBottomOf="@+id/projects_image_left" />

            <TextView
                android:id="@+id/textViewright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/discussion_msg_right"
                android:gravity="right"
                android:paddingStart="24dp"
                android:paddingTop="8dp"
                android:paddingEnd="24dp"
                android:paddingBottom="8dp"
                android:text="Wednesday, Next  "
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintRight_toLeftOf="@+id/rightchatimage"
                app:layout_constraintTop_toBottomOf="@+id/chat_timeright" />

            <ImageView
                android:id="@+id/projects_image_right"
                android:layout_width="220dp"
                android:layout_height="270dp"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/black"

                android:src="@drawable/dashboard_img"
                app:layout_constraintEnd_toStartOf="@+id/rightchatimage"
                app:layout_constraintTop_toBottomOf="@+id/textViewright"/>

            <TextView
                android:id="@+id/textViewdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="10.24 AM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/projects_image_right" />

