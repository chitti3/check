<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.youthhub.loginPage.FragmentForgotPassword">

    <com.libizo.CustomEditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Password"
        android:textSize="14sp"
        android:theme="@style/EditText_color"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/repeat_password"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="50dp" />

    <com.libizo.CustomEditText
        android:id="@+id/repeat_password"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Repeat Password"
        android:textSize="14sp"
        android:theme="@style/EditText_color"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintBottom_toTopOf="@+id/next_btn"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:background="@drawable/open_screen_btn_shape2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/repeat_password"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
