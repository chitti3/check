<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.youthhub.FirstOpenPage.FragmentSignInUp">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/youth_hub_logo"
        app:layout_constraintEnd_toEndOf="@+id/signIn_btn"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/signIn_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Showcase who you are to the world"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/signUp_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Sign up"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/open_screen_btn_shape"
        app:layout_constraintLeft_toLeftOf="@+id/signIn_btn"
        app:layout_constraintRight_toRightOf="@+id/signIn_btn"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/signIn_btn"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp">

    </Button>

    <Button
        android:id="@+id/signIn_btn"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/open_screen_btn_shape1"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </Button>

</android.support.constraint.ConstraintLayout>
