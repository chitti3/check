<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.youthhub.loginPage.ActivityLogin">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:src="@drawable/youth_hub_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
<!--android:text="Asher Connor"-->
<!--android:text="gowtham876@gmail.com"-->
<!--android:text="ioanasala-setiu"-->
<!--android:text="santhoshtradezap@gmail.com"-->
<!--android:text="Jaxon Sophie"-->

        <com.libizo.CustomEditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            app:libIZO_setBorderView="true"
            android:hint="Username"
            android:inputType="textFilter"
            android:text="William Lydia"
            android:textSize="14sp"
            android:theme="@style/EditText_color"
            app:layout_constraintBottom_toTopOf="@+id/password"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.libizo.CustomEditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Password"
                android:text="Trd@sm21"
            app:libIZO_setBorderView="true"
            android:textSize="14sp"
            android:theme="@style/EditText_color"
            android:inputType="textPassword"
            app:libIZO_hideShowPasswordIconTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/forgot_pwd"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/username"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/username"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/forgot_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="5dp"
            app:layout_constraintBottom_toTopOf="@+id/login_btn"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/username"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/username"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/join_now_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Now"
            android:textColor="@color/text_color"
            android:paddingEnd="5dp"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="@+id/username"
            app:layout_constraintTop_toTopOf="@+id/forgot_pwd"
            app:layout_constraintBottom_toBottomOf="@+id/forgot_pwd"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/open_screen_btn_shape1"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/username"
            app:layout_constraintRight_toRightOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/forgot_pwd" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
